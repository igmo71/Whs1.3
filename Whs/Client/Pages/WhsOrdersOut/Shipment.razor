@using Microsoft.AspNetCore.Authorization
@using Whs.Client.Components
@page "/WhsOrdersOut/Shipment"
@attribute [Authorize]

<Notification @ref="Notification" />

<input type="hidden" id="Barcode" value="@Barcode" @onchange="ScannedBarcodeAsync" />

<h3>Выдача</h3>
<h5>Расходные ордера "К Отгрузке"</h5>

@if (Orders == null)
{
    <p><em>Загрузка...</em></p>
}
else
{
    <div class="card-columns">
        @foreach (var item in Orders)
        {
            <div class="card border-0"><Card Value="item" /></div>                  
        }
    </div>
}

@code
{
    private Notification Notification;
}